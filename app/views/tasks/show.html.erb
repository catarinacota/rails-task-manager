<h2><%= @task.title %></h2>

<p><%= @task.details %></p>

<% if @task.completed %>
  <p><i class="far fa-check-square"></i> This task is completed</p>
<% else %>
  <p><i class="far fa-square"></i> This task is not completed yet</p>
<% end  %>


<p> <%= link_to 'Edit this task', edit_task_path %> </p>

<p> <%= link_to 'Back to list', tasks_path %></p>

