<h1>My tasks</h1>

<% @tasks.each do |task| %>
  <div>
    <% if task.completed %>
      <p><i class="far fa-check-square"></i> <%= link_to task.title, task_path(task) %></p>
    <% else %>
      <p><i class="far fa-square"></i> <%= link_to task.title, task_path(task) %></p>
    <% end  %>
  </div>
<% end %>

<%= link_to tasks_new_path do %>
  <i class="fas fa-plus"></i> Add a new task
<% end %>



